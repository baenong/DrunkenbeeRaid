extends base.pug

block content
    div.user-info__container
        .list-header
            .screen-title 
                span #{user.name}
        a(href=`/user/${user._id}/edit`).edit-button.red edit
        ul.char-list
            each char in user.characters 
                li 
                    a(href=`/character/${char._id}`)
                        span #{char.name}

    