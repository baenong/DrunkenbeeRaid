mixin week-party(party)
    a(href=`/party/${party._id}`)
        li.week-party__party
            span.week-party__start #{party.startAt}
            div
                span.week-party__title #{party.title}
                ul.week-party__members
                    each member in party.members
                        li.week-party__member
                            span #{member.name}