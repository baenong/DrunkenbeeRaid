extends ../base.pug
include ../mixins/party

block content
    div.char-info
        .list-header
            .screen-title
                span #{char.name}
        .char-info__meta
            span #{char.classname}
            if char.owner
                span 유저 : #{char.owner.name}
        .char-info__button
            a(href=`/character/${char._id}/edit`).edit-button.red edit
            a(href=`/character/${char._id}/delete`).edit-button.red delete
        ul.char-info__parties.party-grid
            each party in char.parties
                li
                    +party(party)
            else 
                span.empty__message 파티가 없습니다.
